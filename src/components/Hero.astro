---
// Hero.astro
---

<section class="pt-40 px-8">
  <div class="flex flex-col md:flex-row justify-center items-center gap-8">
    
    <!-- Texto -->
    <div class="flex-1 text-center md:text-left">
      <h1 class="text-white text-4xl font-bold mb-4">
        INNOVACIÓN Y TECNOLOGÍA A TU ALCANCE
      </h1>
      <h3 class="text-white text-xl leading-relaxed">
        En <span class="font-semibold text-blue-400">GMGTECH</span> transformamos ideas en soluciones digitales. 
        Creamos experiencias únicas que impulsan tu negocio y conectan con tus clientes.
      </h3>
    </div>

    <!-- Tarjetas apiladas -->
    <div id="carousel" class="relative flex-1 h-80 overflow-hidden">
      <a href="https://portfolio-ignacio-molina.netlify.app" target="_blank" class="card absolute w-full h-72">
        <img src="/pageImage/pagina-1.jpg" class="w-full h-72 object-cover rounded-xl">
      </a>
      <a href="https://gastonmolinaguide.netlify.app" target="_blank" class="card absolute w-full h-72">
        <img src="/pageImage/pagina-2.jpg" class="w-full h-72 object-cover rounded-xl">
      </a>
      <a href="https://portfolio-ignacio-molina.netlify.app" target="_blank" class="card absolute w-full h-72">
        <img src="/pageImage/pagina-1.jpg" class="w-full h-72 object-cover rounded-xl">
      </a>
    </div>
  </div>
</section>

<script>
  import { initCardCarousel } from "../scripts/cardCarousel";

  // Espera al DOM cargado
  document.addEventListener("DOMContentLoaded", () => {
    initCardCarousel("#carousel");
  });
</script>