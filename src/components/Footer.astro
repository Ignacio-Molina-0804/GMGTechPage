---
// Footer.astro
---

<footer class="bg-neutral-900 text-neutral-300 py-10">
  <div class="max-w-6xl mx-auto px-6 flex flex-col items-center text-center space-y-6">
    <!-- Logo (puede ser imagen o texto) -->
    <img src="/logos/GMGTechLogoDark.png" alt="GMGTECH" class="h-12" />
    <!-- Si preferís texto, reemplazá por:
    <h2 class="text-2xl font-bold text-white">GMGTECH</h2>
    -->

    <!-- Redes sociales -->
    <div class="flex space-x-6">
      <a href="#" aria-label="WhatsApp" class="hover:text-green-500 transition">
        <i class="fab fa-whatsapp text-2xl"></i>
      </a>
      <a href="#" aria-label="Instagram" class="hover:text-pink-500 transition">
        <i class="fab fa-instagram text-2xl"></i>
      </a>
      <a href="#" aria-label="LinkedIn" class="hover:text-blue-500 transition">
        <i class="fab fa-linkedin text-2xl"></i>
      </a>
    </div>

    <!-- Copyright -->
    <div class="text-sm text-neutral-500">
      © {new Date().getFullYear()} GMGTECH. Todos los derechos reservados.
    </div>
  </div>
</footer>
