<div
  id="mobile-menu"
  class="fixed top-14 left-0 w-full bg-gray-900 text-white flex flex-col items-center py-6 space-y-4 md:hidden z-40
         transform -translate-y-full opacity-0 transition-all duration-300 ease-in-out"
