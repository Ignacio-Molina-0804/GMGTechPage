---
import Layout from "../layouts/Layout.astro";
import GmailIcon from "../components/icons/GmailIcon.astro";
import PhoneIcon from "../components/icons/PhoneIcon.astro";
import MapIcon from "../components/icons/MapIcon.astro";

import HeroContact from "../components/HeroContact.astro";
---

<Layout>
  <section
    class="min-h-screen from-gray-900 via-gray-800 to-black text-white px-6"
  >
    <!-- Título principal -->
    <HeroContact />

    <!-- Título y descripción de servicios -->
    <div class="max-w-6xl mx-auto text-center mb-16 pt-26">
      <h2 class="text-4xl font-bold mb-4 text-blue-400">Nuestros Servicios</h2>
      <p class="text-gray-300 max-w-2xl mx-auto">
        Si todavía no lo recordás, te mostramos nuevamente todos nuestros
        <span class="text-blue-400 font-semibold">servicios</span>, pensados
        para impulsar tu negocio con soluciones digitales modernas, seguras y
        adaptadas a vos.
      </p>
    </div>

    <!-- Grid de servicios -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20 mx-30">
      <!-- Card Servicio 1 -->
      <div
        class="bg-gray-900/60 backdrop-blur-md p-6 rounded-xl shadow-lg border border-gray-700 hover:scale-105 transition-transform duration-300 flex flex-col justify-between h-64"
      >
        <div>
          <h3 class="text-lg font-semibold mb-3">Servicio 1</h3>
          <ul class="text-gray-300 mb-6 space-y-1 text-sm">
            <li>• Info 1</li>
            <li>• Info 2</li>
            <li>• Info 3</li>
          </ul>
        </div>
        <a
          href="/servicios/servicio1"
          class="block text-center py-2 px-4 bg-blue-600 rounded-lg hover:bg-blue-500 transition-colors font-medium text-sm"
        >
          Leer más
        </a>
      </div>

      <!-- Card Servicio 2 -->
      <div
        class="bg-gray-900/60 backdrop-blur-md p-6 rounded-xl shadow-lg border border-gray-700 hover:scale-105 transition-transform duration-300 flex flex-col justify-between h-64"
      >
        <div>
          <h3 class="text-lg font-semibold mb-3">Servicio 2</h3>
          <ul class="text-gray-300 mb-6 space-y-1 text-sm">
            <li>• Info 1</li>
            <li>• Info 2</li>
            <li>• Info 3</li>
          </ul>
        </div>
        <a
          href="/servicios/servicio2"
          class="block text-center py-2 px-4 bg-blue-600 rounded-lg hover:bg-blue-500 transition-colors font-medium text-sm"
        >
          Leer más
        </a>
      </div>

      <!-- Card Servicio 3 -->
      <div
        class="bg-gray-900/60 backdrop-blur-md p-6 rounded-xl shadow-lg border border-gray-700 hover:scale-105 transition-transform duration-300 flex flex-col justify-between h-64"
      >
        <div>
          <h3 class="text-lg font-semibold mb-3">Servicio 3</h3>
          <ul class="text-gray-300 mb-6 space-y-1 text-sm">
            <li>• Info 1</li>
            <li>• Info 2</li>
            <li>• Info 3</li>
          </ul>
        </div>
        <a
          href="/servicios/servicio3"
          class="block text-center py-2 px-4 bg-blue-600 rounded-lg hover:bg-blue-500 transition-colors font-medium text-sm"
        >
          Leer más
        </a>
      </div>
    </div>



  </section>
</Layout>
