---
import Layout from "../layouts/Layout.astro";
import GmailIcon from "../components/icons/GmailIcon.astro";
import PhoneIcon from "../components/icons/PhoneIcon.astro";
import MapIcon from "../components/icons/MapIcon.astro";

import HeroContact from "../components/HeroContact.astro";
---

<Layout>
  <section
    class="min-h-screen from-gray-900 via-gray-800 to-black text-white px-6"
  >
    <!-- Título principal -->
    <HeroContact />

    <!-- Título y descripción de servicios -->
    <div class="max-w-6xl mx-auto text-center mb-16 pt-26">
      <h2 class="text-4xl font-bold mb-4 text-blue-400">Nuestros Servicios</h2>
      <p class="text-gray-300 max-w-2xl mx-auto">
        Si todavía no lo recordás, te mostramos nuevamente todos nuestros
        <span class="text-blue-400 font-semibold">servicios</span>, pensados
        para impulsar tu negocio con soluciones digitales modernas, seguras y
        adaptadas a vos.
      </p>
    </div>

    <!-- Grid de servicios -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20 mx-30">
      <!-- Card Servicio 1 -->
      <div
        class="bg-gray-900/60 backdrop-blur-md p-6 rounded-xl shadow-lg border border-gray-700 hover:scale-105 transition-transform duration-300 flex flex-col justify-between h-64"
      >
        <div>
          <h3 class="text-lg font-semibold mb-3">Servicio 1</h3>
          <ul class="text-gray-300 mb-6 space-y-1 text-sm">
            <li>• Info 1</li>
            <li>• Info 2</li>
            <li>• Info 3</li>
          </ul>
        </div>
        <a
          href="/servicios/servicio1"
          class="block text-center py-2 px-4 bg-blue-600 rounded-lg hover:bg-blue-500 transition-colors font-medium text-sm"
        >
          Leer más
        </a>
      </div>

      <!-- Card Servicio 2 -->
      <div
        class="bg-gray-900/60 backdrop-blur-md p-6 rounded-xl shadow-lg border border-gray-700 hover:scale-105 transition-transform duration-300 flex flex-col justify-between h-64"
      >
        <div>
          <h3 class="text-lg font-semibold mb-3">Servicio 2</h3>
          <ul class="text-gray-300 mb-6 space-y-1 text-sm">
            <li>• Info 1</li>
            <li>• Info 2</li>
            <li>• Info 3</li>
          </ul>
        </div>
        <a
          href="/servicios/servicio2"
          class="block text-center py-2 px-4 bg-blue-600 rounded-lg hover:bg-blue-500 transition-colors font-medium text-sm"
        >
          Leer más
        </a>
      </div>

      <!-- Card Servicio 3 -->
      <div
        class="bg-gray-900/60 backdrop-blur-md p-6 rounded-xl shadow-lg border border-gray-700 hover:scale-105 transition-transform duration-300 flex flex-col justify-between h-64"
      >
        <div>
          <h3 class="text-lg font-semibold mb-3">Servicio 3</h3>
          <ul class="text-gray-300 mb-6 space-y-1 text-sm">
            <li>• Info 1</li>
            <li>• Info 2</li>
            <li>• Info 3</li>
          </ul>
        </div>
        <a
          href="/servicios/servicio3"
          class="block text-center py-2 px-4 bg-blue-600 rounded-lg hover:bg-blue-500 transition-colors font-medium text-sm"
        >
          Leer más
        </a>
      </div>
    </div>

    <!-- Sección de contacto + cuestionario -->
    <section class="min-h-screen text-white px-6 py-20">
      <div
        class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 items-stretch"
      >
        <!-- Formulario (izquierda) -->
        <div
          class="bg-gray-900/70 backdrop-blur-md p-8 rounded-2xl shadow-2xl border border-gray-700 relative overflow-hidden flex flex-col justify-between"
        >
          <div
            class="absolute inset-0 bg-gradient-to-tr from-blue-600/10 via-transparent to-purple-600/10 pointer-events-none"
          >
          </div>
          <div class="relative z-10">
            <h3 class="text-3xl font-bold mb-6 text-blue-400">
              Tu Cuestionario
            </h3>
            <form class="space-y-5">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <input
                  type="text"
                  placeholder="Nombre"
                  class="w-full px-4 py-3 rounded-lg bg-gray-800/80 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all"
                />
                <input
                  type="email"
                  placeholder="Gmail"
                  class="w-full px-4 py-3 rounded-lg bg-gray-800/80 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all"
                />
              </div>
              <select
                class="w-full px-4 py-3 rounded-lg bg-gray-800/80 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all"
              >
                <option disabled selected>Selecciona un servicio</option>
                <option>Servicio 1</option>
                <option>Servicio 2</option>
                <option>Servicio 3</option>
              </select>
              <input
                type="tel"
                placeholder="Teléfono"
                class="w-full px-4 py-3 rounded-lg bg-gray-800/80 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all"
              />
              <textarea
                rows="4"
                placeholder="Escribe tu mensaje..."
                class="w-full px-4 py-3 rounded-lg bg-gray-800/80 border border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all"
              ></textarea>
              <button
                type="submit"
                class="w-full py-3 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-500 hover:to-purple-500 rounded-lg font-semibold shadow-lg transition-all duration-300"
              >
                Enviar
              </button>
            </form>
          </div>
        </div>

        <!-- Contacto (derecha) -->
        <div
          class="bg-gray-900/70 backdrop-blur-md p-8 rounded-2xl shadow-2xl border border-gray-700 relative overflow-hidden flex flex-col justify-between"
        >
          <div
            class="absolute inset-0 bg-gradient-to-tr from-blue-600/10 via-transparent to-purple-600/10 pointer-events-none"
          >
          </div>

          <div class="relative z-10">
            <h3 class="text-3xl font-bold mb-4 text-blue-400">Contacto</h3>
            <p class="text-gray-300 mb-8">
              ¿Tenés un proyecto en mente o querés más información? Escribinos y
              te responderemos lo antes posible.
            </p>

            <div class="space-y-6 mb-10">
              <!-- Email -->
              <div class="flex items-center gap-4">
                <div
                  class="w-12 h-12 flex items-center justify-center rounded-full bg-blue-600/20 text-blue-400"
                >
                  <GmailIcon class="w-6 h-6" />
                </div>
                <p>
                  <span class="font-semibold text-white">Email:</span>
                  contacto@gmgtech.com
                </p>
              </div>

              <!-- Teléfono -->
              <div class="flex items-center gap-4">
                <div
                  class="w-12 h-12 flex items-center justify-center rounded-full bg-green-600/20 text-green-400"
                >
                  <PhoneIcon class="w-6 h-6" />
                </div>
                <p>
                  <span class="font-semibold text-white">Teléfono:</span> +54 9 11
                  1234-5678
                </p>
              </div>
            </div>

            <!-- ¿Por qué contactarnos? -->
            <div class="bg-gray-800/70 p-6 rounded-xl shadow-md">
              <h4 class="text-xl font-semibold mb-4 text-white">
                ¿Por qué contactarnos?
              </h4>
              <ul class="space-y-3 text-gray-300">
                <li class="flex items-center gap-2">
                  <span class="text-green-400">✔</span> Entregas a tiempo
                </li>
                <li class="flex items-center gap-2">
                  <span class="text-green-400">✔</span> Página 100% rápida
                </li>
                <li class="flex items-center gap-2">
                  <span class="text-green-400">✔</span> Mantenimiento en todo momento
                </li>
                <li class="flex items-center gap-2">
                  <span class="text-green-400">✔</span> Soporte técnico personalizado
                </li>
                <li class="flex items-center gap-2">
                  <span class="text-green-400">✔</span> Optimización SEO y marketing
                  digital
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

  </section>
</Layout>
